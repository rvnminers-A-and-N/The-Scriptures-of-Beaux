{
  "name": "the-scriptures-of-beaux",
  "version": "1.0.0",
  "description": "This is the story of Beaux 1 and Beaux 2, and their journey through the world of crypto, trying to navigate the scriptures, in a conquest to echelon.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.crypticwizardry.scripturesofbeaux",
    "productName": "The Scriptures of Beaux",
    "win": {
      "target": "nsis",
      "icon": "build/echelon_multisize.ico",
      "publisherName": "Crypticwizardry"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/echelon_multisize.ico",
      "uninstallerIcon": "build/echelon_multisize.ico",
      "installerHeaderIcon": "build/echelon_multisize.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Scriptures of Beaux",
      "license": "build/license.md"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvnminers-A-and-N/The-Scriptures-of-Beaux.git"
  },
  "keywords": [
    "scriptures",
    "beaux",
    "rvnminers-A-and-N",
    "echelon",
    "crypto"
  ],
  "author": "Alpha and AYL | crypticwizardry.com",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/rvnminers-A-and-N/The-Scriptures-of-Beaux/issues"
  },
  "homepage": "https://github.com/rvnminers-A-and-N/The-Scriptures-of-Beaux#readme",
  "devDependencies": {
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1"
  }
}
